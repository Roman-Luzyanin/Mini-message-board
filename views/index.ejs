<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
        <%- include('navbar', {links}) %>
        <div class="messageBoard">
            <p class="title">Mini Message Board</p>
            <% messages.forEach((message, idx) => { %>
                <div class="message">     
                    <form action="/delete_<%= idx %>" method="post" class="remove">
                        <button type="submit"></button>
                    </form>    
                    <p class="user"><%= message.user %></p>
                    <p><%= message.text %></p>
                    <p class="date">
                        <span><%= message.added[0] %></span>
                        <a href="/message_<%= idx %>" class="detailsBtn"></a>
                        <span><%= message.added[1] %></span>
                    </p>
                </div>
            <% }) %>
        </div> 
    </body>
</html>