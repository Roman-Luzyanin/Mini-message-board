<html>
    <head>
        <title>New Message</title>
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
        <%- include('navbar', {links}) %>
        <form method="post" action="/new" class="form">
            <h3 class="formTitle">New Message</h3>
            <input class="author" name="author" placeholder="Author">
            <textarea class="text" name="message" placeholder="Message"></textarea>
            <button class="submit" type="submit">Submit</button>
        </form>
    </body>
</html>